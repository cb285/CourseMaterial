    <Grid Margin="0,0,-8,0">
        <ListBox x:Name="listBox_P1" HorizontalAlignment="Left" Height="100" Margin="6,69,0,0" VerticalAlignment="Top" Width="100"/>
        <ListBox x:Name="listBox_P2" HorizontalAlignment="Left" Height="100" Margin="121,69,0,0" VerticalAlignment="Top" Width="100"/>
        <ListBox x:Name="listBox_P3" HorizontalAlignment="Left" Height="100" Margin="236,69,0,0" VerticalAlignment="Top" Width="100"/>
